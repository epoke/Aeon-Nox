<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- BannerWall -->
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<posy>-10</posy>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>944</posy>
				<width>1740</width>
				<height>839</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>148</posy>
				<width>1740</width>
				<height>825</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="panel" id="58">
				<posx>120</posx>
				<posy>179</posy>
				<width>1680</width>
				<height>770</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>58</onup>
				<ondown>58</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31088">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="110" width="560">
					<control type="image">
						<width>560</width>
						<height>110</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<fadetime>400</fadetime>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>4</bordersize>
						<colordiffuse>BAffffff</colordiffuse>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
						<control type="image">
							<posy>5</posy>
							<width>300</width>
							<height>100</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<fadetime>400</fadetime>
							<bordersize>4</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<posx>490</posx>
						<posy>0</posy>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>4</bordersize>
					</control>
					<control type="group">
						<posx>10</posx>
						<posy>10</posy>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout heigth="110" width="560">
					<control type="group">
						<animation type="Focus">
							<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<width>560</width>
							<height>110</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>560</width>
								<height>110</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<fadetime>400</fadetime>
								<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<posy>5</posy>
								<width>300</width>
								<height>100</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<fadetime>400</fadetime>
								<bordersize>4</bordersize>
							</control>
						</control>
						<control type="image">
							<posx>490</posx>
							<posy>4</posy>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>4</bordersize>
						</control>
						<control type="group">
							<posx>10</posx>
							<posy>10</posy>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>1797</posx>
				<posy>179</posy>
				<width>14</width>
				<height>720</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>
</includes>